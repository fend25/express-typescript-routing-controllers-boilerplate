{
  "name": "express-typescript-simple-boilerplate",
  "version": "1.0.0",
  "author": "Alex Saft <fend25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-s build watch",
    "clean": "rimraf dist/*",
    "build": "run-s clean build:compile",
    "build:compile": "tsc",
    "prod": "cross-env NODE_ENV=production node dist/src/index.js",
    "prettier": "prettier . --write",
    "watch:build": "tsc --watch",
    "watch:serve": "nodemon --watch dist/src ./dist/src/index.js",
    "watch": "run-p watch:*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config test/e2e/jest-e2e.json"
  },
  "_moduleAliases": {
    "src": "dist/src"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/multer": "^1.4.2",
    "@types/supertest": "^2.0.8",
    "cross-env": "^7.0.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "multer": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1-alpha.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "src(.*)$": "<rootDir>/src$1"
    },
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
